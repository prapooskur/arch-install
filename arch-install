#!/bin/bash
timedatectl set-ntp true
echo "Installing programs"
pacstrap /mnt base linux linux-firmware vim networkmanager man-db man-pages texinfo btrfs-progs plasma ntfs-3g openssh sudo zsh git base-devel plasma-wayland-session neofetch
genfstab -U /mnt >> /mnt/etc/fstab
cp arch-install-2 /mnt/
arch-chroot /mnt ./arch-install-2 chroot
