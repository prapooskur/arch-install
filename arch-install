#!/bin/bash
timedatectl set-ntp true
echo "Installing programs"
pacstrap /mnt base linux linux-firmware vim networkmanager man-db man-pages texinfo btrfs-progs plasma-meta ntfs-3g openssh sudo zsh git base-devel plasma-wayland-session
genfstab -U /mnt >> /mnt/etc/fstab
arch-chroot /mnt ./arch-chroot-2
